# DeepSeek API Configuration
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Qdrant Configuration
QDRANT_URL=http://qdrant:6333
QDRANT_HOST=qdrant
QDRANT_PORT=6333

# Database Configuration
DATABASE_PATH=./data/metadata.db

# Application Configuration
APP_PORT=8501
LOG_LEVEL=INFO

# Model Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
LLM_MODEL=deepseek-reasoner
FAST_MODEL=deepseek-chat

# Retrieval Configuration
TOP_K=10
MIN_SIMILARITY=0.7
CHUNK_SIZE=350
CHUNK_OVERLAP=30

# Chunking Strategy Configuration
# Options: simple, semantic, section_aware, hybrid
CHUNKING_STRATEGY=section_aware
MIN_CHUNK_SIZE=100
MAX_CHUNK_SIZE=800
# How many section levels to respect (e.g., 3 means split at 6.6.34 level)
SECTION_BOUNDARY_LEVELS=3
# Whether to create compound titles for chunks spanning multiple sections
ALLOW_COMPOUND_TITLES=true
